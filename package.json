{
	"name": "bloggy",
	"version": "0.0.5",
	"description": "blog application using react, redux, express, mongodb",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"server": "nodemon index.js",
		"test": "nodemon --exec mocha -R spec ./tests",
		"test:dev": "nodemon --exec \"mocha -R min ./tests\"",
		"client": "npm run start --prefix client",
		"dev": "concurrently \"npm run server\" \"npm run client\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/escobard/bloggy.git"
	},
	"author": "Daniel Escobar",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/escobard/bloggy/issues"
	},
	"homepage": "https://github.com/escobard/bloggy#readme",
	"dependencies": {
		"concurrently": "^3.5.1",
		"cookie-session": "^2.0.0-beta.3",
		"cors": "^2.8.4",
		"express": "^4.16.2",
		"helmet": "^3.11.0",
		"mocha": "^5.0.0",
		"mongoose": "^5.0.4",
		"nodemon": "^1.14.12",
		"passport": "^0.4.0",
		"passport-google-oauth20": "^1.0.0",
		"supertest": "^3.0.0"
	},
	"devDependencies": {
		"nodemon": "^1.14.12"
	},
	"engines": {
		"node": "8.1.1",
		"npm": "5.0.3"
	}
}
